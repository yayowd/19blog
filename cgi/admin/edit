# block edit
# GET:
#   id == NULL -> add
#   id != NULL -> edit
# POST:
#   id == NULL -> save new
#   id != NULL -> save edit

. ../util/http
. ../util/fcgi
. ../util/common
. ../util/block

res200

# tag for refresh block list or not
refreshList=false

# var for html
date=$(date "+%H:%M %m/%d/%Y")

id=${uparam["id"]}

# --save block from post
if [ "$REQUEST_METHOD" = 'POST' ]; then
    if saveBlock "$id" "${uparam["content"]}" "${uparam["isEdit"]}"; then
        # continue to edit and refresh list
        refreshList=true
    else
        resErr "Save failed"
    fi
fi

if [ -n "$id" ]; then
    # show close button when error
    ERRCLOSE=true

    # set is edit
    isEdit=true
    # set id input to readonly when edit
    readonly='readonly'

    # get block info
    blockInfo "$id"

    # make remove button
    rmbtn="<input class='button remove' type='button' value='Remove' onclick='onRemove()'>"
fi

# the id and content will expand in edit.html
resFile './edit.html'
